<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="beuchert.bluetoothtest.Activities.MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:id="@+id/rectCanvas"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/spinner">

    </RelativeLayout>

    <Button
        android:text="&gt;"
        android:layout_width="50dp"
        android:id="@+id/rightArrowButton"
        android:textSize="25sp"
        android:onClick="rightArrowOnClick"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:padding="0dp"
        android:layout_height="50dp"
        android:layout_alignTop="@+id/spinner"
        android:layout_toEndOf="@+id/spinner" />

    <Button
        android:text="&lt;"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/leftArrowButton"
        android:textSize="25sp"
        android:onClick="leftArrowOnClick"
        android:layout_below="@+id/ConnectButton"
        android:layout_toStartOf="@+id/spinner"
        android:layout_marginTop="58dp" />

    <Spinner
        android:id="@+id/spinner"
        android:layout_width="200.0sp"
        android:layout_height="50dp"
        android:background="@android:drawable/btn_dropdown"
        android:spinnerMode="dropdown"
        android:layout_alignTop="@+id/leftArrowButton"
        android:layout_centerHorizontal="true" />

    <Button
        android:text="Connect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ConnectButton"
        android:onClick="onConnectClick"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/leftArrowButton"
        android:layout_marginStart="17dp" />

    <Button
        android:text="Disconnect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/DisconnectButton"
        android:onClick="DisconnectOnClick"
        android:layout_alignParentTop="true"
        android:layout_alignEnd="@+id/rightArrowButton"
        android:layout_marginEnd="20dp" />

</RelativeLayout>
