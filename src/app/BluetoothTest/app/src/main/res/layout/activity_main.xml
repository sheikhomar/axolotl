<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="beuchert.bluetoothtest.Activities.MainActivity">

    <TextView
        android:text="Package content:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="27dp"
        android:id="@+id/textView"
        android:layout_below="@+id/DisconnectButton"
        android:layout_centerHorizontal="true" />

    <Button
        android:text="Connect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ConnectButton"
        android:onClick="onConnectClick"
        android:layout_marginEnd="14dp"
        android:layout_alignParentTop="true"
        android:layout_toStartOf="@+id/PackageContent" />

    <Button
        android:text="Disconnect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/DisconnectButton"
        android:onClick="DisconnectOnClick"
        android:layout_marginStart="17dp"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/PackageContent" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_below="@+id/PackageContent"
        android:layout_alignParentStart="true"
        android:layout_marginTop="15dp"
        android:id="@+id/communicationMessage"
        android:hint="Insert text" />

    <Button
        android:text="SEND"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/communicationMessage"
        android:layout_toEndOf="@+id/textView"
        android:id="@+id/sendButton"
        android:layout_alignTop="@+id/communicationMessage"
        android:onClick="sendOnClick" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/PackageContent"
        android:maxLines="5"
        android:minLines="1"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="14dp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:id="@+id/rectCanvas"
        android:layout_height="match_parent"
        android:layout_below="@+id/spinner"
        android:layout_alignParentStart="true">

    </RelativeLayout>

    <Spinner
        android:id="@+id/spinner"
        android:layout_width="200.0sp"
        android:layout_height="wrap_content"
        android:background="@android:drawable/btn_dropdown"
        android:spinnerMode="dropdown"
        android:layout_below="@+id/communicationMessage"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
