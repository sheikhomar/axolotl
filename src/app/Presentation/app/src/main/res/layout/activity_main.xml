<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.axolotl.presentation.MainActivity">

    <com.axolotl.presentation.BinSelectorView
        android:id="@+id/bin_selector"
        android:layout_width="70dp"
        android:layout_height="wrap_content" />

    <View
        android:id="@+id/layer_selector"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:background="#45e341"
        android:layout_toRightOf="@id/bin_selector" />

    <com.axolotl.presentation.TwoDimensionalLayerView
        android:id="@+id/drawingView"
        android:background="#333333"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/bin_selector"
        android:layout_below="@id/layer_selector" />

</RelativeLayout>